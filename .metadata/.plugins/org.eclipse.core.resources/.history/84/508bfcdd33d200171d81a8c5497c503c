import java.awt.event.*;

public class PedirListener implements ActionListener {
    public void actionPerformed(ActionEvent ae) {
        String s = ae.getActionCommand();
        int indiceJog = Integer.parseInt(s);
        ControladorJogo.getControladorJogo().eventoAcaoJogador(indiceJog, ControladorJogo.AcaoJogador.PEDIR_CARTA);
    }
}